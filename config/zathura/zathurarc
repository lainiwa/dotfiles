
# Enable copy to clipboard
set selection-clipboard clipboard

# # Enable Sandbox
# set sandbox strict

set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 1

map u scroll half-up
map d scroll half-down
map K zoom in
map J zoom out
map D toggle_page_mode
map r reload
map R rotate
map i recolor
map p print

# Invert color
set recolor
map <C-i> recolor
